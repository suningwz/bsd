<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_partner_form_stock_location">
        <field name="name">view_partner_form_stock_location</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="stock.view_partner_stock_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='container_row_stock']" position="attributes">
                <attribute name="groups"></attribute>
            </xpath>
            <xpath expr="//group[@name='warehouse']" position="inside">
                <field name="oncall_location_id" />
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="partner_oncall_open_orders">
        <field name="context">{}</field>
        <field name="domain">[('partner_id', 'child_of', partner_id)]</field>
        <field name="name">On-Call Orders</field>
        <field name="res_model">stock.oncall.order</field>
    </record>

    <record model="ir.ui.view" id="view_partner_oncall_orders">
        <field name="name">view_partner_oncall_orders</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action" attrs="{'invisible': [('oncall_location_id', '=', False)]}" name="%(partner_oncall_open_orders)d" icon="fa-building" groups="sales_team.group_sale_salesman" context="{'partner_id': id}">
                    <field string="Products On-Call" name="oncall_product_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
