<odoo>
    <data>
        <record id="view_purchase_order_form_inhrit" model ="ir.ui.view">
            <field name="name">purchase.order.form.inhrit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="reception_date"/>
                    <field name="date_disponibility"/>
                    <button 
                        type="object" 
                        name="update_related_documents" 
                        class="oe_stat_button"
                        icon="fa-refresh"
                        string="Mettre à jour"
                        help="Mise à jour des lignes et des produits"
                        confirm="Voulez vous mettre-à-jour tous les documents associées à cet Bon de vente? "
                    />
                </field>

                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="action_view_sales_po"
                        type="object" icon="fa-signal" groups="sales_team.group_sale_salesman" help="Sold in the last 365 days">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="sales_count" widget="statinfo" nolabel="1" class="mr4"/>
                                <field name="uom_name"/>
                            </span>
                            <span class="o_stat_text">Vendu</span>
                        </div>
                    </button>
                </div>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position="before">
                    <field name="product_image" widget="image" class="oe_avatar"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/form/sheet/notebook/page/field[@name='name']" position="replace">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="product_image" widget="image" />
                        </group>
                    </group>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/form/sheet/group/group[2]/field[@name='date_planned']" position="before">
                    <field name="date_disponibility"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/form/sheet/group/group[2]/field[@name='date_planned']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='date_planned']" position="before">
                    <field name="date_disponibility"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='date_planned']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="/form/sheet/notebook/page[@name='purchase_delivery_invoice']/group/group/label" position="replace">
                    <label for="date_disponibility"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page[@name='purchase_delivery_invoice']/group/group/div/field[@name='date_planned']" position="replace">
                    <field name="date_disponibility"/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree" />
            <field name="arch" type="xml">
                <field name="date_planned" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="date_planned" position="before">
                    <field name="date_disponibility" invisible="context.get('quotation_only', False)"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_line_form2_inhrit" model="ir.ui.view">
            <field name="name">purchase.order.line.form2</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form2" />
            <field name="arch" type="xml">
                <field name="date_planned" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="date_planned" position="before">
                    <field name="date_disponibility" invisible="context.get('quotation_only', False)"/>
                </field>
            </field>
        </record>

    </data>
</odoo>